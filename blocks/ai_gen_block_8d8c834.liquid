      "label": "Title",
      "default": "Free shipping"
    },
    {
      "type": "text",
      "id": "feature_1_text",
      "label": "Text",
      "default": "On orders over $50"
    },
    {
      "type": "header",
      "content": "Feature 2"
    },
    {
      "type": "text",
