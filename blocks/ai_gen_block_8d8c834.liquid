{% doc %}
  @prompt
    a section with 3 columns (icon with text) like Free shipping , fast delivery and secure payment
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-features-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-features-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.alignment }};
    text-align: {{ block.settings.alignment }};
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-features-icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    flex-shrink: 0;
  }

  .ai-features-icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
    color: {{ block.settings.icon_color }};
  }

  .ai-features-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-features-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-features-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | times: 1.5 }}px;
    }

    .ai-features-column-{{ ai_gen_id }} {
      align-items: center;
      text-align: center;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-container-{{ ai_gen_id }}">
    <div class="ai-features-grid-{{ ai_gen_id }}">
      <div class="ai-features-column-{{ ai_gen_id }}">
        <div class="ai-features-icon-wrapper-{{ ai_gen_id }}">
          <svg class="ai-features-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="1" y="3" width="15" height="13"></rect>
            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
            <circle cx="5.5" cy="18.5" r="2.5"></circle>
            <circle cx="18.5" cy="18.5" r="2.5"></circle>
          </svg>
        </div>
        <div class="ai-features-content-{{ ai_gen_id }}">
          <h3 class="ai-features-title-{{ ai_gen_id }}">{{ block.settings.feature_1_title }}</h3>
          <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</p>
        </div>
      </div>

      <div class="ai-features-column-{{ ai_gen_id }}">
        <div class="ai-features-icon-wrapper-{{ ai_gen_id }}">
          <svg class="ai-features-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
          </svg>
        </div>
        <div class="ai-features-content-{{ ai_gen_id }}">
          <h3 class="ai-features-title-{{ ai_gen_id }}">{{ block.settings.feature_2_title }}</h3>
          <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</p>
        </div>
      </div>

      <div class="ai-features-column-{{ ai_gen_id }}">
        <div class="ai-features-icon-wrapper-{{ ai_gen_id }}">
          <svg class="ai-features-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
        <div class="ai-features-content-{{ ai_gen_id }}">
          <h3 class="ai-features-title-{{ ai_gen_id }}">{{ block.settings.feature_3_title }}</h3>
          <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

